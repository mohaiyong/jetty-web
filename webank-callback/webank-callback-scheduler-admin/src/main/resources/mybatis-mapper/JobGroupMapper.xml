<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.scheduler.admin.dao.JobGroupDao">
	
	<resultMap id="JobGroup" type="com.spring.scheduler.admin.core.model.JobGroup" >
		<result column="id" property="id" />
	    <result column="app_name" property="appName" />
	    <result column="title" property="title" />
	    <result column="order" property="order" />
		<result column="address_type" property="addressType" />
		<result column="address_list" property="addressList" />
		<result column="regist_id" property="registId" />
		<result column="regist_name" property="registName" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id,
		t.app_name,
		t.title,
		t.order,
		t.address_type,
		t.address_list,
		t.regist_id
	</sql>

	<select id="findAll" resultMap="JobGroup">
		SELECT <include refid="Base_Column_List" />,r.client_name as regist_name
		FROM JOB_QRTZ_TRIGGER_GROUP AS t
		left join
		job_qrtz_trigger_registry r
		on t.regist_id= r.id
		ORDER BY t.order ASC
	</select>

	<select id="findByAddressType" parameterType="java.lang.Integer" resultMap="JobGroup">
		SELECT <include refid="Base_Column_List" />
		FROM JOB_QRTZ_TRIGGER_GROUP AS t
		WHERE t.address_type = #{addressType}
		ORDER BY t.order ASC
	</select>

	<insert id="save" parameterType="com.spring.scheduler.admin.core.model.JobGroup" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO JOB_QRTZ_TRIGGER_GROUP ( `app_name`, `title`, `order`, `address_type`, `address_list`,`regist_id`)
		values ( #{appName}, #{title}, #{order}, #{addressType}, #{addressList}, #{registId});
	</insert>

	<update id="update" parameterType="com.spring.scheduler.admin.core.model.JobGroup" >
		UPDATE JOB_QRTZ_TRIGGER_GROUP
		SET `app_name` = #{appName},
			`title` = #{title},
			`order` = #{order},
			`address_type` = #{addressType},
			`address_list` = #{addressList},
			`regist_id` = #{registId}
		WHERE id = #{id}
	</update>

	<delete id="remove" parameterType="java.lang.Integer" >
		DELETE FROM JOB_QRTZ_TRIGGER_GROUP
		WHERE id = #{id}
	</delete>

	<select id="load" parameterType="java.lang.Integer" resultMap="JobGroup">
		SELECT <include refid="Base_Column_List" />
		FROM JOB_QRTZ_TRIGGER_GROUP AS t
		WHERE t.id = #{id}
	</select>

</mapper>