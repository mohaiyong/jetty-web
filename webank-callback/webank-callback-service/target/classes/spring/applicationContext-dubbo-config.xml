<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    
	    http://www.springframework.org/schema/beans/spring-beans.xsd    
	    http://code.alibabatech.com/schema/dubbo     
	    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 1 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="${dubbo.app.name}" />

	<!-- 2 用dubbo协议在20880端口暴露服务 accesslog="D:/access.log" -->
	<dubbo:protocol name="dubbo" port="${dubbo.app.port}" />
    
	<!-- 3.1 发布服务到本地注册中心:provider[默认发布服务的地址+默认消费服务的地址] -->
	<dubbo:registry address="${dubbo.app.address}" check="false" timeout="50000"/>
	
</beans>
	